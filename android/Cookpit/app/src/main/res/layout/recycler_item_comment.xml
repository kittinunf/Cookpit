<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/photoCommentAvatarImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:padding="8dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/photoCommentNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/photoCommentAvatarImageView"
        android:padding="2dp"
        android:textColor="@color/teal400"
        android:textSize="14sp"
        tools:text="John Appleseed"
        />

    <TextView
        android:id="@+id/photoCommentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/photoCommentAvatarImageView"
        android:layout_below="@id/photoCommentNameTextView"
        android:padding="2dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:text="I really love your photo, please share more."
        />

</RelativeLayout>